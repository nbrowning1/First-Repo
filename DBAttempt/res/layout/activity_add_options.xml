<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".AddOptionsActivity" >
    
    <Button
        android:id="@+id/button_add_calf"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
		android:layout_marginTop="100dp"
		android:layout_centerHorizontal="true"
        android:text="@string/activity_add_options_add_calf"
        android:onClick="goToAddCalf" />
    
    <Button
        android:id="@+id/button_add_medical_record"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
		android:layout_marginTop="30dp"
		android:layout_centerHorizontal="true"
        android:layout_below="@id/button_add_calf"
        android:text="@string/activity_add_options_add_medical_record"
        android:onClick="goToAddMedicalRecord" />
    
    <Button
        android:id="@+id/button_add_dehorning_event"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
		android:layout_marginTop="30dp"
		android:layout_centerHorizontal="true"
        android:layout_below="@id/button_add_medical_record"
        android:text="@string/activity_add_options_add_dehorning_event"
        android:onClick="goToAddDehorningEvent" />
</RelativeLayout>
