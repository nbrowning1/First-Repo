<ScrollView 
	    xmlns:android="http://schemas.android.com/apk/res/android"
    	xmlns:tools="http://schemas.android.com/tools"
   		android:id="@+id/layout" 
   		android:layout_height="match_parent"      
   		android:layout_width="match_parent"      
 	 	android:scrollbarStyle="outsideInset"
   		android:fillViewport="true"
   		android:layout_weight="1"> 

	<RelativeLayout
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:paddingBottom="@dimen/activity_vertical_margin"
    	android:paddingLeft="@dimen/activity_horizontal_margin"
    	android:paddingRight="@dimen/activity_horizontal_margin"
    	android:paddingTop="@dimen/activity_vertical_margin"
    	tools:context=".MonthlyReportActivity$DummySectionFragment" >
    
	<!-- Title -->
    <TextView 
        android:id="@+id/title_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:textSize="17sp"
        android:text="@string/activity_monthly_report_title" />
	    
    <!-- Total Calves -->
    <TextView 
        android:id="@+id/total_calves_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_label"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="30dp"
        android:textSize="20sp"
        android:text="@string/activity_monthly_report_total_calves" />
    
    <TextView 
        android:id="@+id/total_calves_show"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/total_calves_label"
        android:layout_alignBaseline="@id/total_calves_label"
        android:textSize="20sp"
        android:layout_marginLeft="50dp" />
    
    <!-- 50p Calves -->
    <TextView 
        android:id="@+id/cheap_calves_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/total_calves_label"
        android:layout_marginTop="30dp"
        android:layout_alignLeft="@id/total_calves_label"
        android:textSize="20sp"
        android:text="@string/activity_monthly_report_cheap_calves" />
    
    <TextView 
        android:id="@+id/cheap_calves_show"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/cheap_calves_label"
        android:textSize="20sp"
        android:layout_alignLeft="@id/total_calves_show" />
    
    <!-- 85p Calves -->
    <TextView 
        android:id="@+id/expensive_calves_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cheap_calves_label"
        android:layout_marginTop="30dp"
        android:layout_alignLeft="@id/total_calves_label"
        android:textSize="20sp"
        android:text="@string/activity_monthly_report_expensive_calves" />
    
    <TextView 
        android:id="@+id/expensive_calves_show"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/expensive_calves_label"
        android:textSize="20sp"
        android:layout_alignLeft="@id/total_calves_show" />
    
    <!-- No. Dehorned -->
    <TextView 
        android:id="@+id/no_dehorned_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/expensive_calves_label"
        android:layout_marginTop="30dp"
        android:layout_alignLeft="@id/total_calves_label"
        android:textSize="20sp"
        android:text="@string/activity_monthly_report_number_dehorned" />
    
    <TextView 
        android:id="@+id/no_dehorned_show"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/no_dehorned_label"
        android:textSize="20sp"
        android:layout_alignLeft="@id/total_calves_show" />
    
    <!-- No. Moved -->
    <TextView 
        android:id="@+id/no_moved_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/no_dehorned_label"
        android:layout_marginTop="30dp"
        android:layout_alignLeft="@id/total_calves_label"
        android:textSize="20sp"
        android:text="@string/activity_monthly_report_number_moved" />
    
    <TextView 
        android:id="@+id/no_moved_show"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/no_moved_label"
        android:textSize="20sp"
        android:layout_alignLeft="@id/total_calves_show" />
    
    <!-- No. Died -->
    <TextView 
        android:id="@+id/no_died_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/no_moved_label"
        android:layout_marginTop="30dp"
        android:layout_alignLeft="@id/total_calves_label"
        android:textSize="20sp"
        android:text="@string/activity_monthly_report_number_died" />
    
    <TextView 
        android:id="@+id/no_died_show"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/no_died_label"
        android:textSize="20sp"
        android:layout_alignLeft="@id/total_calves_show" />
    
    <!-- Total Intake -->
    <TextView 
        android:id="@+id/total_intake_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/no_died_label"
        android:layout_marginTop="30dp"
        android:layout_alignLeft="@id/total_calves_label"
        android:textSize="20sp"
        android:text="@string/activity_monthly_report_total_intake" />
    
    <TextView 
        android:id="@+id/total_intake_show"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/total_intake_label"
        android:textSize="20sp"
        android:layout_alignLeft="@id/total_calves_show" />
    
    <!-- Extra Space -->
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/total_intake_label"
        android:layout_marginTop="30dp"
        android:text=""
         />

	</RelativeLayout>
</ScrollView>
