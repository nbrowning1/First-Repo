<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".EditCowOptionsActivity" >

    <Button 
        android:id="@+id/edit_cow_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:text="@string/activity_edit_cow_edit_cow"
        android:onClick="editCows"
        />
    
    <Button
        android:id="@+id/delete_cow_button" 
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_below="@id/edit_cow_button"
        android:text="@string/activity_edit_cow_delete_cow"
        android:onClick="deleteCows"
        />
    
    <Button
        android:id="@+id/delete_medical_record_button" 
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/edit_cow_button"
        android:text="@string/activity_edit_cow_delete_medical_record"
        android:onClick="deleteMedicalRecords"
        />
    
    <Button
        android:id="@+id/delete_dehorning_event_button" 
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="30dp"
        android:layout_below="@id/edit_cow_button"
        android:text="@string/activity_edit_cow_delete_dehorning_event"
        android:onClick="deleteDehorningEvents"
        />
    
    <Button 
        android:id="@+id/delete_all_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/delete_dehorning_event_button"
        android:text="@string/activity_edit_cow_delete_all"
        android:onClick="deleteAll"
        />

</RelativeLayout>
